{
  "name": "cloud-functions-game",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript monorepo for Google Cloud web game project",
  "workspaces": [
    "frontend",
    "backend/functions",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend/functions",
    "build:shared": "npm run build --workspace=shared",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
